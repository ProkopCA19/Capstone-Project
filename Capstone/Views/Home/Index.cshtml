    <div id="myCarousel" class="carousel col-md-8" data-ride="carousel" data-interval="2000" style="margin-top:40px">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Images/blackandwhite.jpg" alt="Los Angeles" style="width:120%; height:550px">
            </div>

            <div class="item">
                <img src="~/Images/camera.jpg" alt="Chicago" style="width:1020px; height:550px">
            </div>

            <div class="item">
                <img src="~/Images/pink.jpg" alt="New York" style="width:1020px; height:550px">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

